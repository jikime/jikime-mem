{
  "name": "jikime-mem",
  "version": "1.0.0",
  "description": "Claude Code 세션 메모리 시스템 - SQLite + Chroma 기반",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 37888 --turbopack",
    "build": "next build && npm run build:hooks",
    "build:hooks": "node scripts/build-hooks.js",
    "build-and-sync": "npm run build && npm run sync-marketplace && sleep 1 && npm run worker:restart",
    "start": "next start -p 37888",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate",
    "sync-marketplace": "node scripts/sync-marketplace.js",
    "sync-marketplace:force": "node scripts/sync-marketplace.js --force",
    "worker:start": "node plugin/scripts/worker-service.js start",
    "worker:stop": "node plugin/scripts/worker-service.js stop",
    "worker:restart": "node plugin/scripts/worker-service.js restart",
    "worker:status": "node plugin/scripts/worker-service.js status",
    "worker:logs": "tail -n 50 ~/.jikime-mem/logs/worker-$(date +%Y-%m-%d).log",
    "worker:tail": "tail -f ~/.jikime-mem/logs/worker-$(date +%Y-%m-%d).log",
    "plugin:install": "node scripts/install-plugin.js",
    "plugin:install:force": "node scripts/install-plugin.js --force",
    "plugin:uninstall": "node scripts/install-plugin.js --uninstall"
  },
  "dependencies": {
    "next": "16.1.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "@prisma/client": "^6.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.2",
    "prisma": "^6.2.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
