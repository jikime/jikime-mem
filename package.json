{
  "name": "jikime-mem",
  "version": "1.2.0",
  "description": "Claude Code 세션 메모리 시스템 - SQLite 기반 컨텍스트 관리",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun scripts/build.ts",
    "build:watch": "bun --watch scripts/build.ts",
    "dev": "bun --watch src/worker/index.ts serve",
    "start": "bun src/worker/index.ts serve",
    "worker:start": "bun plugin/scripts/worker-service.js start",
    "worker:stop": "bun plugin/scripts/worker-service.js stop",
    "worker:restart": "bun plugin/scripts/worker-service.js restart",
    "worker:status": "bun plugin/scripts/worker-service.js status",
    "worker:logs": "tail -n 50 ~/.jikime-mem/logs/worker-$(date +%Y-%m-%d).log",
    "worker:tail": "tail -f ~/.jikime-mem/logs/worker-$(date +%Y-%m-%d).log",
    "sync-marketplace": "bun scripts/sync-marketplace.js",
    "sync-marketplace:force": "bun scripts/sync-marketplace.js --force",
    "build-and-sync": "npm run build && npm run sync-marketplace && sleep 1 && npm run worker:restart"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "express": "^4.18.2",
    "marked": "^17.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
